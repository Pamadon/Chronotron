<div class="hikes-loaded"></div>
<%for i in (0...@loops)%>
	<%if $hikes[i]['distance']%>
		Name: <span><%=$hikes[i]['name']%></span>
		<br>
		Description: <span><%=$hikes[i]['activities'][0]['description']%></span>
		<br>
		lat: <span><%=$hikes[i]['lat']%></span>
		<br>
		lon: <span><%=$hikes[i]['lon']%></span>
		<br>
		length of hikes: <span><%=$hikes[i]['activities'][0]['length']%></span>
		<br>
		time for hike: <span><%=$hikes[i]['activities'][0]['length'].to_i/3.1*60.round%> minutes</span>
		<br>
		your origin: <span><%=$hikes[i]['origin']%></span>
		<br>
		your mode: <span><%=$hikes[i]['mode']%></span>
		<br>
		distance to hikes: <span><%=$hikes[i]['distance']['text']%></span>
		<br>
		time to get to hikes: <span><%=$hikes[i]['duration']['text']%></span>
		<br>
		address of hike: <span><%=$hikes[i]['end_address']%></span>
		<hr>
	<%end%>
<%end%>
